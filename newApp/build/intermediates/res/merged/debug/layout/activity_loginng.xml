<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9CD5E2"
    android:orientation="vertical"
    tools:context=".LoginngActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tipe_textView_Loging"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center_horizontal|bottom"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="238dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/longing_edittext_bg" >

            <EditText
                android:id="@+id/username_editText1"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/longing_edittext_bg"
                android:ems="10"
                android:hint=" 用户名"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user_loging" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="238dp"
            android:layout_height="38dp"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginTop="26dp"
            android:background="@drawable/longing_edittext_bg" >

            <EditText
                android:id="@+id/password_editText2"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/longing_edittext_bg"
                android:ems="10"
                android:hint=" 密码"
                android:inputType="textWebPassword" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="36dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/layer_loging" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_for_loging"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_below="@+id/relativeLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/loging_button_bg"
            android:text="登录" />

        <Button
            android:id="@+id/button_loging_regist"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignRight="@+id/button_for_loging"
            android:layout_alignTop="@+id/textView1"
            android:background="@drawable/loging_button_bg"
            android:text="点击注册"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/button_for_loging"
            android:layout_below="@+id/button_for_loging"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="没有账号？" />

    </RelativeLayout>

</LinearLayout>